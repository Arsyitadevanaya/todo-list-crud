<!--include header-->
<%- include('include/_header') %>
    <!--/include header-->

    <!--Main site-->
    <main id="site-main">
        <div class="container">
            <div class="box-nav d-flex-justify-between">
                <div class="filter">
                    <a href="/"><i class="fa-solid fa-angles-left"></i> All Task</a>
                </div>
            </div>
            <div class="form-title text-center">
                <h2 class="text-dark">Update Task</h2>
                <span class="text-light">Use the below form to update a new task</span>
            </div>
            <!--from handling-->
            <form method="POST" id="update_task">
                <div class="new_task">
                    <div class="form-group">
                        <label for="task" class="text-light">Task</label>
                        <input type="hidden" name="id" value=" <%= todolist._id %>">
                        <input type="text" name="task" value=" <%= todolist.task %>" placeholder="Task">
                    </div>
                    <div class="form-group">
                        <label for="date" class="text-light">Deadline</label>
                        <input type="hidden" name="deadline" value="">
                        <input type="date" name="deadline">
                    </div>
                    <div class="form-group">
                        <label for="status" class="text-light">Status</label>
                        <div class="radio-inline">
                            <input type="radio" name="status" value="In progress" <%=todolist.status=='In progress' ? 'checked'
                                : '' %> >
                            <label for="status" class="text-light">In progress</label>
                        </div>
                        <div class="radio-inline">
                            <input type="radio" name="status" value="Done" <%=todolist.status=='Done' ? 'checked' : ''
                                %>>
                            <label for="status" class="text-light">Done</label>
                        </div>
                    </div>
                    <div class="form-group">
                        <button type="submit" class="btn text-dark update">Submit</button>
                    </div>
                </div>

            </form>
            <!--/from handling-->
        </div>
    </main>
    <!--/Main site-->

    <!--include footer-->
    <%- include('include/_footer') %>
        <!--/include footer-->